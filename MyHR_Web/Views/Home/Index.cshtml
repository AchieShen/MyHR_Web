                    list-style: none;
                }

                ul.slides {
                    width: 5000px;
                    left: 0px;
                    transition: all .5s;
                }

                    ul.slides li {
                        width: 500px;
                        height: 300px;
                        overflow: hidden;
                        float: left;
                    }

                        ul.slides li img {
                            width: 100%;
                            height: 100%;
                            object-fit: cover;
                        }

                .dot {
                    bottom: 10px;
                    width: 100%;
                    display: flex;
                    justify-content: center;
                }

                    .dot li {
                        border: 1px solid #fff;
                        margin: 0 5px;
                        width: 24px;
                        height: 10px;
                    }

                .slide_btn {
                    display: flex;
                    justify-content: center;
                    align-items: center;
                    top: 0;
                    bottom: 0;
                    width: 30px;
                    color: #fff;
                    position: absolute;
                    font-size: 24px;
                }

                #prevSlide {
                    left: 0;
                }

                #nextSlide {
                    right: 0;
                }

                .slide_btn i {
                    color: rgba(255,255,255,.6);
                    transition: .5s;
                }

                .slide_btn:hover i {
                    color: rgba(255,255,255,1);
                }
    </style>
