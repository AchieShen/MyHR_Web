@model MyHR_Web.Models.TUser
@{
    ViewData["Title"] = "Profile";
}

<style>
    h2 {
        background-color: #cbb2ae;
        border-left: 5px solid #808080;
        font-family: "微软雅黑", "宋体", "黑体", Arial;
        font-size: 25px;
        height: 80px;
        line-height: 80px;
        font-weight: bold;
        text-shadow: 2px 2px 3px #222222;
        color: #FFFFFF;
        padding-left: 10px;
    }
</style>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h2>個人資料</h2>

    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-3">

                    <!-- Profile Image -->
                    <div class="card card-primary card-outline">
                        <div class="card-body box-profile">
                            <div class="text-center">
                                <img class="profile-user-img img-fluid img-circle"
                                     src="~/theme/dist/img/user4-128x128.jpg"
                                     alt="User profile picture">
                            </div>

                            <h3 class="profile-username text-center">@ViewData["CURRENT_LOGINED_USERNAME"]</h3>

                            <p class="text-muted text-center">@ViewData["CURRENT_LOGINED_USERJOBTITLE"]</p>


                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                    <!-- About Me Box -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">關於我</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <strong><i class="fas fa-book mr-1"></i> 部門</strong>

                            <p class="text-muted">
                                @ViewData["CURRENT_LOGINED_USERDEPARTMENT"]
                            </p>

                            <hr>

                            <strong><i class="fas fa-map-marker-alt mr-1"></i>職位</strong>

                            <p class="text-muted">@ViewData["CURRENT_LOGINED_USERJOBTITLE"]</p>

                            <hr>

                            @*<strong><i class="far fa-file-alt mr-1"></i> Notes</strong>

                                <p class="text-muted">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Etiam fermentum enim neque.</p>*@
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
                <div class="col-md-9">
                    <div class="card">
                        <div class="card-header p-2">
                            <ul class="nav nav-pills">
                                <li class="nav-item"><a class="nav-link active" href="#settings" data-toggle="tab">settings</a></li>
                            </ul>
                        </div><!-- /.card-header -->
                        <div class="card-body">
                            <div class="tab-content">

                                <div class="active tab-pane" id="settings">
                                    <form class="form-horizontal">

                                        <div class="form-group row">
                                            <label asp-for="CEmployeeId" class="col-sm-2 col-form-label"></label>
                                            <div class="col-sm-10">
                                                <input asp-for="CEmployeeId" class="form-control" />
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label asp-for="CEmployeeName" class="col-sm-2 col-form-label"></label>
                                            <div class="col-sm-10">
                                                <input asp-for="CEmployeeName" class="form-control" />
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label asp-for="CEmployeeEnglishName" class="col-sm-2 col-form-label"></label>
                                            <div class="col-sm-10">
                                                <input asp-for="CEmployeeEnglishName" class="form-control" />
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label asp-for="CPassWord" class="col-sm-2 col-form-label"></label>
                                            <div class="col-sm-10">
                                                <input asp-for="CPassWord" class="form-control" />
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label asp-for="COnBoardDay" class="col-sm-2 col-form-label"></label>
                                            <div class="col-sm-10">
                                                <input asp-for="COnBoardDay" class="form-control" />
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label asp-for="CByeByeDay" class="col-sm-2 col-form-label"></label>
                                            <div class="col-sm-10">
                                                <input asp-for="CByeByeDay" class="form-control" />
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label asp-for="CGender" class="col-sm-2 col-form-label"></label>
                                            <div class="col-sm-10">
                                                <input asp-for="CGender" class="form-control" />
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label asp-for="CEmail" class="col-sm-2 col-form-label"></label>
                                            <div class="col-sm-10">
                                                <input asp-for="CEmail" class="form-control" />
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label asp-for="CAddress" class="col-sm-2 col-form-label"></label>
                                            <div class="col-sm-10">
                                                <input asp-for="CAddress" class="form-control" />
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label asp-for="CDepartmentId" class="col-sm-2 col-form-label"></label>
                                            <div class="col-sm-10">
                                                <input asp-for="CDepartmentId" class="form-control" />
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label asp-for="CJobTitleId" class="col-sm-2 col-form-label"></label>
                                            <div class="col-sm-10">
                                                <input asp-for="CJobTitleId" class="form-control" />
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label asp-for="CSupervisor" class="col-sm-2 col-form-label"></label>
                                            <div class="col-sm-10">
                                                <input asp-for="CSupervisor" class="form-control" />
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label asp-for="CBirthday" class="col-sm-2 col-form-label"></label>
                                            <div class="col-sm-10">
                                                <input asp-for="CBirthday" class="form-control" />
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label asp-for="CPhone" class="col-sm-2 col-form-label"></label>
                                            <div class="col-sm-10">
                                                <input asp-for="CPhone" class="form-control" />
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label asp-for="CPhoto" class="col-sm-2 col-form-label"></label>
                                            <div class="col-sm-10">
                                                <input asp-for="CPhoto" class="form-control" />
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label asp-for="CEmergencyPerson" class="col-sm-2 col-form-label"></label>
                                            <div class="col-sm-10">
                                                <input asp-for="CEmergencyPerson" class="form-control" />
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label asp-for="CEmergencyContact" class="col-sm-2 col-form-label"></label>
                                            <div class="col-sm-10">
                                                <input asp-for="CEmergencyContact" class="form-control" />
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label asp-for="COnBoardStatusId" class="col-sm-2 col-form-label"></label>
                                            <div class="col-sm-10">
                                                <input asp-for="COnBoardStatusId" class="form-control" />
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label asp-for="CAccountEnable" class="col-sm-2 col-form-label"></label>
                                            <div class="col-sm-10">
                                                <input asp-for="CAccountEnable" class="form-control" />
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <div class="offset-sm-2 col-sm-10">

                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="offset-sm-2 col-sm-10">
                                                <button type="button" class="btn btn-success" , style="filter: grayscale(50%)">修改</button>
                                            </div>
                                        </div>
                                    </form>

                                </div>
                            </div>
                            <!-- /.tab-content -->
                        </div><!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->

</div>
