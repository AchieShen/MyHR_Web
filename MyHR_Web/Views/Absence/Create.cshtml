@model MyHR_Web.ViewModel.CAbsenceViewModel
@{
    ViewData["Title"] = "Create";
}
<style>
    h2 {
        background-color: #cbb2ae;
        border-left: 5px solid #808080;
        font-family: "微软雅黑", "宋体", "黑体", Arial;
        font-size: 25px;
        height: 80px;
        line-height: 80px;
        font-weight: bold;
        text-shadow: 2px 2px 3px #222222;
        color: #FFFFFF;
        padding-left: 10px;
    }
</style>
<link href="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/css/bootstrap4-toggle.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/js/bootstrap4-toggle.min.js"></script>
<div class="content-wrapper">
    <section class="content-header">
        <h2>打卡補登系統</h2>
        <form asp-action="Create">
            <div class="card" style="width:50%;margin:0px auto;padding:0px;">
                <div class="card-header">
                    <div class="form-group" style="display:none">
                        <label asp-for="CApplyNumber" class="control-label"></label>
                        <input asp-for="CApplyNumber" class="form-control" />
                        <span asp-validation-for="CApplyNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">員工編號</label>
                        <input class="form-control" readonly="readonly" value="@ViewData["CURRENT_LOGINED_USERID"]"/>
                        <span class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">姓名</label>
                        <input class="form-control" readonly="readonly" value="@ViewData["CURRENT_LOGINED_USERNAME"]"/>
                        <span class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">部門</label>
                        <input class="form-control" readonly="readonly" value="@ViewData["CURRENT_LOGINED_USERDEPARTMENT"]"/>
                        <span class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">日期</label>
                        <input class="form-control" type="date" id="date" />
                        <span asp-validation-for="COn" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="checkbox" data-onstyle="info" data-toggle="toggle" data-size="lg" data-on="上班" data-off="上班" style="filter: grayscale(50%)">&nbsp&nbsp
                        <input type="checkbox" data-onstyle="info" data-toggle="toggle" data-size="lg" data-on="下班" data-off="上班" style="filter: grayscale(50%)">
                    </div>
                    <div class="form-group">
                        <input type="submit" value="確認" class="btn btn-primary" style="filter: grayscale(50%)" />
                    </div>
                    <div style="float:right">
                        <a asp-action="List" class="btn btn-secondary" style="filter: grayscale(50%)">返回打卡查詢</a>
                    </div>
                </div>
            </div>
        </form>
    </section>
</div>






