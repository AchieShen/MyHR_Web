@model MyHR_Web.ViewModel.CAbsenceViewModel
@using Microsoft.AspNetCore.Http;
@using prjCoreDemo.ViewModel;
@{
    string Id = Context.Session.GetString(CDictionary.CURRENT_LOGINED_USERID);
    string Name = Context.Session.GetString("CURRENT_LOGINED_USERNAME");
    string Dep = Context.Session.GetString("CURRENT_LOGINED_USERDEPARTMENT");
    var date = ViewBag.ab_date;
}
@{ ViewData["Title"] = "Edit";}

<style>
    h2 {
        background-color: #cbb2ae;
        border-left: 5px solid #808080;
        font-family: "微软雅黑", "宋体", "黑体", Arial;
        font-size: 25px;
        height: 80px;
        line-height: 80px;
        font-weight: bold;
        text-shadow: 2px 2px 3px #222222;
        color: #FFFFFF;
        padding-left: 10px;
    }
</style>
<div class="content-wrapper">
    <section class="content-header">
        <h2>打卡補登</h2>
    </section>
    <hr />
    <section class="content">
        <div class="col-md-9" style="width:70%; margin:0px auto;padding:0px">
            <div class="card">
                <div class="card-header p-2">
                    <div class="card-body">
                        <form asp-action="Edit">
                            <input asp-for="CApplyNumber" style="display:none" />
                            @*<div class="form-group">
                                <label asp-for="CDepartment" class="control-label"></label>
                                <input asp-for="CDepartment" class="form-control" readonly="readonly" value="@Dep"/>
                                <span asp-validation-for="CDepartment" class="text-danger"></span>
                            </div>*@
                            <div class="form-group">
                                <label asp-for="CEmployeeId" class="control-label"></label>
                                <input asp-for="CEmployeeId" class="form-control" value="@Id" readonly="readonly" />
                                <span asp-validation-for="CEmployeeId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="employeeName" class="control-label"></label>
                                <input asp-for="employeeName" class="form-control" value="@Name" readonly="readonly" />
                                <span asp-validation-for="employeeName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CDate" class="control-label"></label>
                                <input type="date" asp-for="CDate" class="form-control" id="date" readonly="readonly"/>
                                <span class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label">補登時段</label>
                                @{
                                    dbMyCompanyContext db = new dbMyCompanyContext();
                                    var ab_on=db.TAbsences.FirstOrDefault(a=>a.COn!=null);
                                    var ab_off = db.TAbsences.FirstOrDefault(a=>a.COff!=null);
                                    if (ab_on == null && ab_off == null)//上下班補打卡
                                    {
                                        <select class="form-control" id="when">
                                            <option asp-for="COn" value="1">上班</option>
                                            <option asp-for="COn" value="2">下班</option>
                                        </select>
                                    }
                                    else if (ab_on == null && ab_off == null)//補上班卡
                                    {
                                        <input asp-for="COn" class="form-control" id="date" />
                                    }
                                    else if (ab_on == null && ab_off == null)//補下班卡
                                    {
                                        <input asp-for="COff" class="form-control" id="date" />
                                    }
                                }
                                <span class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="取消" onclick="return (confirm('尚未完成補登作業，確定要離開此頁面?'))" asp-action="List" class="btn btn-default" , style="filter: grayscale(50%)" />
                                <input type="submit" value="確認" onclick="Edit()" class="btn btn-info float-right" , style="filter: grayscale(50%)" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <br />
        </div>
    </section>
</div>
<script>
    function Edit() {
        var id = @Id;
        var date = $("#date").val();
        var when = $("#when option:selected").val();
        console.log(id);
        console.log(date);
        console.log(when);

        $.ajax({
            type: "post",
            dataType: "html",
            url: "/Absence/Edit",
            data: { id: id, date: date, when: when },
            success: function (data) {
                console.log("test");
                //$("#absence_table").html(data);
            },
            error: function (msg) {
                alert("error:" + msg);
            }
        })
    };


</script>
