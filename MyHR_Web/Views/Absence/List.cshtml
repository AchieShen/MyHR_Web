@using Microsoft.AspNetCore.Http;
@using prjCoreDemo.ViewModel;;
@{string a = Context.Session.GetString(CDictionary.CURRENT_LOGINED_USERID);}

@model IEnumerable<MyHR_Web.ViewModel.CAbsenceViewModel>
@{
    ViewData["Title"] = "List";
}
<html>
<head>
    <link href="~/css/Absence.css" rel="stylesheet" />

    <link href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.js"></script>

    <style>
        .red a {
            background-color: red !important;
            border-radius: 20px;
        }

        .yellow a {
            background-color: yellow !important;
            border-radius: 20px;
        }

        .green a {
            background-color: green !important;
            border-radius: 20px;
        }

        #absence_table{
            float:left;
            width:60%;
            margin-left:10px;
        }
        #calendar{
            float:right;
            width:38%;
            margin-left:10px;
        }
    </style>

</head>
<body>
    <div class="content-wrapper">
        <section class="content-header">
            <h2>打卡</h2>
        </section>
        <section class="content">
            <div class="clock">
                <button type="button" class="button" onclick="clockOn()" id="on" style="filter: grayscale(50%)">上班</button><br /><br />
                <button type="button" class="button" onclick="clockOff()" id="off" style="filter: grayscale(50%)">下班</button><br /><br />
                <input type="button" class="btn btn-info" id="setFace" style="filter: grayscale(50%)" value="人臉辨識打卡設定" /><br /><br />
                <input type="button" class="btn btn-info" id="setQR" style="filter: grayscale(50%)" value="QR Code打卡設定" />
            </div>
            <div class="content-wrapper">
                <body onload="ShowTime()">
                    <form id="form1" runat="server" class="nowTime">
                        <div id="showbox"></div>
                        <div id="showClock"><p>溫馨小提醒&nbsp:&nbsp上下班皆需打卡~</p></div>
                    </form>
                </body>

                <div class="container-fluid" id="absence_table">
                    <div class="row">
                        <div class="col-12">
                            <div class="card" >
                                <div class="card-header">
                                    <h3 class="card-title">
                                        查詢條件<br />
                                        起 :&nbsp <input type="date" />&nbsp迄 : &nbsp<input type="date" />&nbsp<input type="button" value="查詢" class="btn btn-success" style="filter: grayscale(50%)" />
                                        <div class="btn-group btn-group-toggle" data-toggle="buttons" style="filter: grayscale(50%)">
                                            <label class="btn btn-info active"><input type="radio" name="options" id="option1" autocomplete="off">當天</label>
                                            <label class="btn btn-info"><input type="radio" name="options" id="option2" autocomplete="off" checked>當週</label>
                                            <label class="btn btn-info"><input type="radio" name="options" id="option3" autocomplete="off">當月</label>
                                        </div>
                                        <a asp-action="Edit" class="btn btn-warning" style="filter: grayscale(50%)">補登打卡紀錄</a>
                                    </h3>
                                </div>
                                <div class="card-body">
                                    <table id="example2" class="table table-bordered table-hover">
                                        <thead>
                                            <tr>
                                                <th>@Html.DisplayNameFor(model => model.COn)</th>
                                                <th>@Html.DisplayNameFor(model => model.COff)</th>
                                                <th>@Html.DisplayNameFor(model => model.CSatus)</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                            <tr>
                                                <td id="on" name="on">@Html.DisplayFor(modelItem => item.COn)</td>
                                                <td id="off" name="off">@Html.DisplayFor(modelItem => item.COff)</td>
                                                @{
                                                    if (item.CSatus == "異常")
                                                    {
                                                        <td id="status" name="status">@Html.ActionLink($"{item.CSatus}", "Edit", new { applyNum = item.CApplyNumber })</td>
                                                    }
                                                    else 
                                                    { 
                                                        <td id="status" name="status">@Html.DisplayFor(modelItem => item.CSatus)</td>
                                                    }
                                                }
                                            </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>

                            </div>

                        </div>
                    </div>
                </div>
                <div id="calendar" ></div>
            </div>
        </section>
    </div>
</body>
</html>

