@model MyHR_Web.ViewModel.CPropertyViewModel

@{
    ViewData["Title"] = "Create";
}

<style>
    h2 {
        background-color: #cbb2ae;
        border-left: 5px solid #808080;
        font-family: "微软雅黑", "宋体", "黑体", Arial;
        font-size: 25px;
        height: 80px;
        line-height: 80px;
        font-weight: bold;
        text-shadow: 2px 2px 3px #222222;
        color: #FFFFFF;
        padding-left: 10px;
    }
</style>

<div class="content-wrapper">

    <section class="content-header">
        <h2>失物招領系統</h2>
        @Html.ActionLink("失物招領一覽表", "List", new { }, new { @type = "button", @class = "btn btn-secondary", @style = "filter: grayscale(50%)" })
            <div class="card" style="width:50%;margin:0px auto;padding:0px;">
                <div class="card-header">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="CEmployeeId" class="control-label"></label>
                            <input asp-for="CEmployeeId" class="form-control" value="@ViewData["LOGIN_USERID"]" />
                        </div>
                        <div class="form-group">
                            <label asp-for="CDepartmentName" class="control-label"></label>
                            <input asp-for="CDepartmentName" class="form-control" value="@ViewData["CURRENT_LOGINED_USERDEPARTMENT"]">
                        </div>
                        @*<div class="form-group">
                            <label asp-for="CDepartmentId" class="control-label"></label>
                            <input asp-for="CDepartmentId" class="form-control" value="@ViewData["CURRENT_LOGINED_USERDEPARTMENT"]">
                        </div>*@
                        <div class="form-group">
                            <label asp-for="CPhone" class="control-label"></label>
                            <input asp-for="CPhone" class="form-control" value="@ViewData["LOGIN_USERPHONE"]" />
                            <span asp-validation-for="CPhone" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CPropertySubjectId" class="control-label"></label>
                            <select asp-for="CPropertySubjectId" class="form-control"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="CPropertyCategoryId" class="control-label"></label>
                            <select asp-for="CPropertyCategoryId" class="form-control"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="CPropertyPhoto" class="control-label"></label>
                            <input asp-for="CPropertyPhoto" class="form-control" />
                            <span asp-validation-for="CPropertyPhoto" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CProperty" class="control-label"></label>
                            <input asp-for="CProperty" class="form-control" />
                            <span asp-validation-for="CProperty" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CLostAndFoundDate" class="control-label"></label>
                            <input asp-for="CLostAndFoundDate" class="form-control" />
                            <span asp-validation-for="CLostAndFoundDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CLostAndFoundSpace" class="control-label"></label>
                            <input asp-for="CLostAndFoundSpace" class="form-control" />
                            <span asp-validation-for="CLostAndFoundSpace" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CtPropertyDescription" class="control-label"></label>
                            <input asp-for="CtPropertyDescription" class="form-control" />
                            <span asp-validation-for="CtPropertyDescription" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CPropertyCheckStatusId" class="control-label"></label>
                            <select asp-for="CPropertyCheckStatusId" id="t狀態下拉選單" class="form-control"></select>
                            <span asp-validation-for="CPropertyCheckStatusId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="新增" class="btn btn-primary" />
                        </div>
                    </form>
                 </div>
             </div>
</div>
<script>
    var propertycheck;
    $.ajax({
        url: "/Property/pcheckStatus",
        type: "Get",
        success: function (pdata) {
            txt = "";
            console.log(pdata);
            for (let f = 0; f < pdata.length; f++) {
                txt += "<option value='" + pdata[f].cPropertyCheckStatusID + "'>" + pdata[f].cPropertyCheckStatus + "</option>";
            }
            document.getElementById("t狀態下拉選單").innerHTML = txt;
        }
    });
</script>
                   
                    @section Scripts {
                        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
                    }
