@model IEnumerable<MyHR_Web.ViewModel.CSalaryViewModel>
@{ ViewData["Title"] = "Count_Absense";
                 }


<h2  style="background-color:cadetblue"><font>@ViewBag.MONTH</font>月遲到紀錄</h2>
<div class="row">
    <div class="col-12">
        <div class="card">
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr style="text-align:center">
                            
                            
                            <th>遲到類別</th>
                            <th>次數</th>
                            <th>扣款明細</th>
                           
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr style="text-align:center">
                                <td>
                                    @Html.DisplayNameFor(model => model.Count_Latebelow30)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Count_Latebelow30)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CAmont_Latebelow30)
                                </td>
                            </tr>

                            <tr style="text-align:center">
                                <td>
                                    @Html.DisplayNameFor(model => model.Count_Lateup30)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Count_Lateup30)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CAmont_Lateup30)
                                </td>
                            </tr>



                            <tr style="text-align:center">
                                <td></td>
                                <td style="border-top:double">Total:</td>
                                <td style="border-top:double">@Html.DisplayFor(modelItem => item.CAmont_TAbsense)</td>
                            </tr>

            
                        }


                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>
