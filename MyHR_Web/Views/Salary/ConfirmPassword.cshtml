
@{
    ViewData["Title"] = "ConfirmPassword";
}

@*<h1>驗證身分</h1>*@

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>AdminLTE 3 | Lockscreen</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/theme/plugins/fontawesome-free/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/theme/dist/css/adminlte.min.css">
</head>
<body class="hold-transition lockscreen">
    <!-- Automatic element centering -->
    <div class="lockscreen-wrapper">
        <div class="lockscreen-logo">
            @*<a href="../Views/Home/Index.cshtml">*@<b>MyHR</b>@*</a>*@
        </div>
        <!-- User name -->
        <div class="lockscreen-name">@ViewBag.Name</div>


        <!-- START LOCK SCREEN ITEM -->
        <div class="lockscreen-item">
            <!-- lockscreen image -->
            <div class="lockscreen-image">
     
                <img src="~/theme/dist/img/user4-128x128.jpg" alt="User Image">
            </div>
            <!-- /.lockscreen-image -->
            <!-- lockscreen credentials (contains the form) -->
            <form method="post" class="lockscreen-credentials">
                <div class="input-group">
                    <input name="Password" onkeyup="value=value.replace(/[^\a-\z\A-\Z0-9]/g,'')" onpaste="value=value.replace(/[^\a-\z\A-\Z0-9]/g,'')" oncontextmenu = "value=value.replace(/[^\a-\z\A-\Z0-9]/g,'')" type="password" class="form-control" placeholder="password">
                    <div class="nav-link">
                        <input class="fa-arrow-right" type="submit" value="驗證">
                    </div>


                    @*<div class="input-group-append"><button type="submit" class="btn"><i class="fas fa-arrow-right text-muted"><a asp-asp-area="" asp-controller="Salary" asp-action="SalaryList">222</a></i></button></div>*@
                    @*改了這行，但是想要上面的class圖片代替驗證字樣*@

                </div>
            </form>
            <!-- /.lockscreen credentials -->

        </div>
        <!-- /.lockscreen-item -->
        <div class="help-block text-lg-center">
            Enter your password to Confirm identity
        </div>
        
    </div>
    <!-- /.center -->
    <!-- jQuery -->
    <script src="~/theme/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/theme/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>
